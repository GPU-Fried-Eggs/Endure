<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Endure.AppMobileShell"
    x:DataType="viewmodels:ShellViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="using:Endure.ViewModels"
    xmlns:views="using:Endure.Views">
    <TabBar>
        <Tab Title="{Binding Main.Title}"
             Icon="{Binding Main.Icon}">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}"/>
        </Tab>
        <Tab Title="{Binding Settings.Title}"
             Icon="{Binding Settings.Icon}">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>
